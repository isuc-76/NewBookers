<div class="successfully">
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
</div>


<div class="container">
  <div class="row">
<!-- ↑　サイドバーを含めた大きなコンテナを設置 -->

<%= render 'books/sidebar', book: @showbook, user: @user %>

<div class="col-xs-9">
<!-- ↑部分テンプレートの下に設置 -->


<div class="show">

<h2 class="p_title">Book detail</h2>

<tbody>
	
      <tr>
        <td>
          <%= link_to user_path(@book.user) do %>
          <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %><% end %><br>

          <%= link_to user_path(@book.user) do %>
          <%= @user.name %>
          <% end %>
        </td>
        <td class="tb"><%=@book.title %></td>
        <td class="tb"><%= @book.body %></td>
        <td class="tb">
        	<% if @book.user == current_user %>
        	<%= link_to "Edit", edit_book_path(@book.id) %>
        	<% end %>
        </td>
        <td class="tb">
	        <% if @book.user == current_user %>
	        <%= link_to "Destroy", book_path(@book), method: :delete %>
	        <% end %>
    	</td>


      </tr>
    
</tbody>



</div>


    </div>
  </div>
</div>