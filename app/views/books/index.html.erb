<div class="bookers">

<div class="successfully">
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
</div>

<%= render 'books/sidebar', book: @book, user: @user %>

<div class="index">
<h2>Books</h2>

<table>
  <thead>
    
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
        <td class="tb">
          <%= link_to book_path(book.id) do %>
          <%= book.title %>
          <% end %>
        </td>
        <td class="tb"><%= book.body %></td>



      </tr>
    <% end %>
  </tbody>
</table>
</div>

</div>