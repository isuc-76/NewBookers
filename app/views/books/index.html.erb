<div class="bookers">

<div class="successfully">
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
</div>

<%= render 'books/sidebar', book: @book, user: @user %>

<div class="index">
<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td class="tb"><%= book.title %></td>
        <td class="tb"><%= book.body %></td>

        <td class="tb"><%= link_to "Show", book_path(book) %></td>
        <td class="tb"><%= link_to "Edit", edit_book_path(book) %></td>
        <td class="tb"><%= link_to "Destroy", book, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>

</div>