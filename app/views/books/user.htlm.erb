<div class="users">

<div class="successfully">
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
</div>

<%= render 'books/sidebar', book: @book, user: @user %>

<div class="user">
<h2>Users</h2>

<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td></td>
        <td class="tb"><%= user.name %></td>
        <td class="tb"></td>

        <td class="tb"><%= link_to "Show", book_path(book) %></td>
        <td class="tb"><%= link_to "Edit", edit_book_path(book) %></td>
        <td class="tb"><%= link_to "Destroy", book, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>

</div>