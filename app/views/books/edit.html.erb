<div class="edit">
<h2>Editing Book</h2>

<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>

<% if @book.errors.any? %>
    <div class="error">
      <p>
        <%= pluralize(@book.errors.count, "error") %> 
        prohibited this book from being saved:
      </p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
	</div>
  <% end %>

    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :body %><br>
    <%= f.submit 'Update Book' %>    
<% end %>

<%= link_to "Show", book_path(@book.id) %> |
<%= link_to "Back", books_path %>
</div>