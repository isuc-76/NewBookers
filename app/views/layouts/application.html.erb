<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookers</title>
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,600,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
  </head> 

  <body>

    <div class="header" id="header">
      <nav class="navbar navbar-main navbar-shadow" role="navigation" id="slide-nav">
        <div class="container relative">
          <div class="navbar-header">
   
            
              
          <h3 class="headtitle">Bookers</h3>
          
            <ul class="nav-list">
	      	  	<li class="">
                <% if user_signed_in? %>
                <%= link_to user_path(current_user) do %>
                <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home
                <% end %>

                <% else %>
                <%= link_to root_path do %>
                <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home
                <% end %>
                <% end %>
              </li>

              <li class="">
                <% if user_signed_in? %>
                <%= link_to users_path do %>
                            <!--↑ファイル名  -->
                  <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users
                <% end %>
                <% else %>
                <%= link_to abouts_path do %>
                <span class="glyphicon glyphicon-link" aria-hidden="true"></span> About
                <% end %>
                <% end %>
              </li>

              <li class="">
                <% if user_signed_in? %>
                <%= link_to books_path do %>
                <span class="glyphicon glyphicon-book" aria-hidden="true"></span> Books
                <% end %>
                <% else %>
                <%= link_to new_user_registration_path do %>
                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Sign up
                <% end %>
                <% end %>
              </li>


              <li class="">
                <% if user_signed_in? %>
                <%= link_to destroy_user_session_path, method: :delete do %>
                <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> logout
                <% end %>
                <% else %>
                <%= link_to new_user_session_path do %>
                <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> login
                <% end %>
                <% end %>
              </li>


            </ul>
          
        </div>
      </nav>
    </div>
  
    <%= yield %>





   
   <footer class="footer style-2">
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <div class="col">
              <br>
              <p class="no-margin" style="font-size: 11px;">
              <br>
              CopyRight Infratop.inc
          </p>
              
              
            </div>
          </div>
          <div class="col-md-2">
            <div class="col">
              
              
            </div>
          </div>
        </div>
      </div>
    </footer>
    
  </body>
</html>
