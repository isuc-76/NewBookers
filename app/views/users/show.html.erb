  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>

<div class="container">
  <div class="row">
<!-- ↑　サイドバーを含めた大きなコンテナを設置 -->

<%= render 'books/sidebar', book: @showbook, user: @user %>

<div class="col-xs-9">
<!-- ↑部分テンプレートの下に設置 -->

<div class="show">

<h2 class="p_title">Books</h2>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td></td>
        <td class="tb">
          <%= link_to book_path(book.id) do %>
          <%= book.title %>
          <% end %>
        </td>
        <td class="tb"><%= book.body %></td>

        <td class="tb"></td>
        <td class="tb"></td>
        <td class="tb"></td>

      </tr>
    <% end %>
  </tbody>
</table>


</div>


