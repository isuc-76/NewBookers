




<div class="successfully">
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
</div>

<div class="container">
  <div class="row">
<!-- ↑　サイドバーを含めた大きなコンテナを設置 -->

<%= render 'books/sidebar', book: @book, user: @user %>



<div class="col-xs-9">
<!-- ↑部分テンプレートの下に設置 -->

<div class="user">
<h2>Users</h2>

<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size:'40x40' %></td>
        <td class="tb"><%= user.name %></td>
        <td class="tb"></td>

        <td class="tb"><%= link_to "Show", user_path(user) %></td>
       

      </tr>
    <% end %>
  </tbody>
</table>
</div>

</div>


  </div>
</div>