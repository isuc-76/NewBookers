<div class="users">

<div class="successfully">
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
</div>

<%= render 'books/sidebar', book: @book, user: @user %>

<div class="user">
<h2>Users</h2>

<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
        <td class="tb"><%= user.name %></td>
        <td class="tb"></td>

        <td class="tb"><%= link_to "Show", user_path(user) %></td>
       

      </tr>
    <% end %>
  </tbody>
</table>
</div>

</div>