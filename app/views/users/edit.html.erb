<div class="body-wrap">
  <div id="st-container" class="st-container">
    <div class="st-pusher">
      <div class="st-content">
        <div class="st-content-inner">      
          <section class="slice slice-lg sct-color-1">
              <div class="container">
                  <div class="row">
                      <div class="col-md-4 col-md-offset-4">
                          <div class="form-user style-1 rounded has-shadow-1"> 
                            <div class="form-header text-center">
                                <h2 class="form-header-title">User info</h2>
                            </div>
                            <div class="form-body">

  <% if @user.errors.any? %>
    <div class="error">
      <p class="error-top">
        <%= pluralize(@user.errors.count, "error") %>
        prohibited this book from being saved:
      </p>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
        <% end %>

                              
<%= form_for(@user) do |f| %>
    <div class="">
        <label class="control-label sr-only" for="inputEmail">Name</label>
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail"%>
        <span class="" aria-hidden="true"></span>
    </div>
    <div class="">
        <div class="user-edit-image">
            
        </div>
        <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
        <%= f.attachment_field :profile_image, placeholder: "", class: "" %>
    </div>
    <div class="">
        <label class="control-label sr-only" for="inputEmail">introduction</label>
        <%= f.text_field :introduction, autofocus: true, class:"form-control", id:"inputEmail", placeholder:""%>
        <span class="" aria-hidden="true"></span>
    </div>
    <%= f.submit "Update User" %>
<% end %>

                            </div>
                          </div> 
                      </div>
                  </div>
              </div>
          </section>
        </div>
      </div>
    </div>
  </div>
</div>