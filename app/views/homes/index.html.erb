<%= render 'books/sidebar', book: @showbook, user: @user %>

<div class="show">

<h2 class="p_title">Book detail</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td></td>
        <td class="tb"><%= book.title %></td>
        <td class="tb"><%= book.body %></td>

        <td class="tb"><%= link_to "Show", book_path(book) %></td>
        <td class="tb"></td>
        <td class="tb"></td>

      </tr>
    <% end %>
  </tbody>
</table>